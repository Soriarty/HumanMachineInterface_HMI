<controls:MetroWindow   x:Class="HM_Interface_Visu.MainWindow"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                        xmlns:MahApps="http://metro.mahapps.com/winfx/xaml/shared"
                        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                        xmlns:Uwpcontrols="using:Microsoft.Toolkit.Uwp.UI.Controls"
                        xmlns:system="clr-namespace:System;assembly=mscorlib"
                        xmlns:notifiMSG ="clr-namespace:HM_Interface_Visu"
        
        Title="Human Machine Interface" Height="800" Width="1100"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        GlowBrush="{DynamicResource AccentColorBrush}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{StaticResource MaterialDesignFont}" Loaded="MetroWindow_Loaded">

    <controls:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Shadows.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
     </controls:MetroWindow.Resources>

    <materialDesign:DialogHost  x:Name="DialogHost" Identifier="RootDialog" SnackbarMessageQueue="{Binding ElementName=MainSnackbar, Path=MessageQueue}">
        <DockPanel>
            <materialDesign:ColorZone Padding="16" Mode="PrimaryMid" DockPanel.Dock="Top" materialDesign:ShadowAssist.ShadowDepth="Depth3" MinHeight="80" >
                <DockPanel>
                    <ToggleButton Style="{StaticResource MaterialDesignHamburgerToggleButton}" IsChecked="False" x:Name="MenuToggleButton" Checked="MenuToggleButton_Checked"/>

                    <materialDesign:PopupBox DockPanel.Dock="Right" PlacementMode="BottomAndAlignRightEdges" StaysOpen="False">
                        <StackPanel>
                            <Button Content="Login" Click="MenuPopupButton_OnClick"/>
                            <Button Content="Logout" IsEnabled="False" />
                        </StackPanel>
                    </materialDesign:PopupBox>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30">HMI</TextBlock>
                </DockPanel>
            </materialDesign:ColorZone>
            <DockPanel>
                <materialDesign:ColorZone Mode="Dark"  materialDesign:ShadowAssist.ShadowDepth="Depth3" VerticalAlignment="Stretch" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Width="150">
                    <Grid x:Name="MenuGrid" VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Button Content="Home" FontSize="20" Grid.Row="0" IsDefault="True" Style="{DynamicResource MaterialDesignFlatButton}" Margin="5 10 5 0" Height="70"/>
                        <Button Content="Manual" FontSize="20" Grid.Row="1" IsDefault="True" Style="{DynamicResource MaterialDesignFlatButton}" Margin="5 10 5 0" Height="70"/>
                        <Button Content="Position" FontSize="20" Grid.Row="2" IsDefault="True" Style="{DynamicResource MaterialDesignFlatButton}" Margin="5 10 5 0" Height="70"/>
                        <Button Content="History" FontSize="20" Grid.Row="3" IsDefault="True" Style="{DynamicResource MaterialDesignFlatButton}" Margin="5 5 10 0" Height="70"/>
                        <Button Content="Monitoring" FontSize="20" Grid.Row="4" IsDefault="True" Style="{DynamicResource MaterialDesignFlatButton}" Margin="5 10 5 0" Height="70"/>
                    </Grid>
                </materialDesign:ColorZone>
                <Grid x:Name="GUI">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" VerticalAlignment="Top" >

                    </DockPanel>
                    <DockPanel Grid.Row="1" VerticalAlignment="Bottom">
                        <StackPanel x:Name="NotifiSlot" Margin="10 10 10 10"/>
                    </DockPanel>
                </Grid>
            </DockPanel>

        </DockPanel>
    </materialDesign:DialogHost>
</controls:MetroWindow>
